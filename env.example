# LLM Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OLLAMA_BASE_URL=http://localhost:11434
LLM_PROVIDER=openrouter  # or "ollama"
MODEL_NAME=openai/gpt-3.5-turbo  # or "llama2" for Ollama
 
# Notion OAuth Configuration (Required for user Notion integration)
NOTION_CLIENT_ID=your_notion_client_id_here
NOTION_CLIENT_SECRET=your_notion_client_secret_here
NOTION_REDIRECT_URI=https://c073621a9c20.ngrok-free.app/auth/notion/callback
NOTION_MOBILE_REDIRECT_URI=studymate://auth/notion/callback

# Vector Database
QDRANT_URL=https://your-qdrant-cloud-url.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION_NAME=knowledgebase

# App Configuration
DEBUG=true
CORS_ORIGINS=http://localhost:3000
API_HOST=0.0.0.0
API_PORT=8000

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
DAILY_QUERY_LIMIT=10

# File Upload
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads

# Database
DATABASE_URL=sqlite:///./chat_history.db

# Email Configuration (Choose one option below)

# Option 1: Gmail SMTP (Free - 500 emails/day)
# 1. Enable 2FA on your Gmail account
# 2. Generate App Password: https://myaccount.google.com/apppasswords
# 3. Use your Gmail address and the generated App Password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_16_character_app_password
ADMIN_EMAIL=your_email@gmail.com

# Option 2: SendGrid (Free - 100 emails/day)
# 1. Sign up at https://sendgrid.com
# 2. Create API key in Settings > API Keys
# 3. Use SMTP settings below
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USERNAME=apikey
# SMTP_PASSWORD=your_sendgrid_api_key
# ADMIN_EMAIL=your_email@domain.com

# Option 3: Mailgun (Free - 5,000 emails/month)
# 1. Sign up at https://mailgun.com
# 2. Verify your domain or use sandbox domain
# 3. Get SMTP credentials from Settings > Sending > SMTP
# SMTP_HOST=smtp.mailgun.org
# SMTP_PORT=587
# SMTP_USERNAME=postmaster@your-domain.mailgun.org
# SMTP_PASSWORD=your_mailgun_smtp_password
# ADMIN_EMAIL=your_email@domain.com

# Option 4: Resend (Free - 3,000 emails/month)
# 1. Sign up at https://resend.com
# 2. Create API key in Settings > API Keys
# 3. Use SMTP settings below
# SMTP_HOST=smtp.resend.com
# SMTP_PORT=587
# SMTP_USERNAME=resend
# SMTP_PASSWORD=your_resend_api_key
# ADMIN_EMAIL=your_email@domain.com

# Option 5: Formspree (Free - 50 submissions/month, contact forms only)
# 1. Sign up at https://formspree.io
# 2. Create a form and get the endpoint URL
# 3. Update the contact form endpoint in your frontend
# FORMSPREE_ENDPOINT=https://formspree.io/f/your_form_id

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10 